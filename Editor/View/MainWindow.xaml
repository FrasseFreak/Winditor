<Window x:Class="Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Editor"
        xmlns:vm="clr-namespace:Editor.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="890" Loaded="Window_Loaded">
    <Window.InputBindings>
        <KeyBinding Command="{Binding Path=UndoCommand}" Key="Z" Modifiers="Ctrl"/>
        <KeyBinding Command="{Binding Path=RedoCommand}" Key="Y" Modifiers="Ctrl"/>
    </Window.InputBindings>
    
    <Grid>
        <Grid.DataContext>
            <vm:MainWindowViewModel/>
        </Grid.DataContext>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu IsMainMenu="True" Grid.Row="0">
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" InputGestureText="Ctrl + Z">
                    <MenuItem.Icon><Image Source="../resources/ui/undo_16x.png"/></MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Redo" InputGestureText="Ctrl + Y">
                    <MenuItem.Icon>
                        <Image Source="../resources/ui/redo_16x.png"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1">
            <WindowsFormsHost x:Name="glControlHost" Margin="10"/>
        </Grid>
    </Grid>
</Window>
